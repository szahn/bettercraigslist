<div class="panel panel-default">
  <div class="panel-heading">
    <%= form_for(@comment) do |f| %>
      <% if @comment.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@comment.errors.count, "error") %> prohibited this review from being saved:</h2>

          <ul>
          <% @comment.errors.full_messages.each do |comment| %>
            <li><%= message %></li>
          <% end %>
          </ul>
        </div>
      <% end %>

      <%= f.hidden_field :owner_id, :value => @user.id %>

      <div class="form-group">
        <%= f.label :message %><br>
        <%= f.text_area :message, class: "form-control"  %>
      </div>
      <div class="form-group">
        <%= f.label :seller_experience %><br>
        <span class="fa fa-thumbs-up"></span>
        <%= f.check_box :seller_experience  %>
      </div>
      <div class="form-group">
        <%= f.label :product_experience %><br>
        <span class="fa fa-thumbs-up"></span>
        <%= f.check_box :product_experience  %>
      </div>
      <div class="actions">
        <%= f.submit "Submit Review", class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>