<h1>Listing posts</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>User</th>
      <th>Price</th>
      <th>Category</th>
      <th>Phone</th>
      <th>Email</th>
      <th>Accept paypal</th>
      <th>Accept stripe</th>
      <th>Likes</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= post.user_id %></td>
        <td><%= post.price %></td>
        <td><%= post.category %></td>
        <td><%= post.phone %></td>
        <td><%= post.email %></td>
        <td><%= post.accept_paypal %></td>
        <td><%= post.accept_stripe %></td>
        <td><%= post.likes %></td>
        <td><%= link_to 'Show', post %></td>
        <td><%= link_to 'Edit', edit_post_path(post) %></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Post', new_post_path %>
