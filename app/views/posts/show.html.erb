<p id="notice"><%= notice %></p>
<section id="post">
  <h1><%= @post.title %></h1>
  
  <div id="infobar">
      <strong id="price"><%= number_to_currency(@post.price, :unit => "$") %></strong>
      <button class="btn btn-sm btn-default" type="button">
        <%= @post.category %>
      </button>
      <button class="btn btn-sm btn-primary" type="button">
        Like <span class="badge"><%= @post.likes %></span>
      </button>
  </div>

  <p>
    <%=@post.description %>
  </p>

  <p>
    <strong>Phone:</strong>
    <%= @post.phone %>
  </p>

  <p>
    <strong>Email:</strong>
    <%= @post.email %>
  </p>

  <p>
    <strong>Accept paypal:</strong>
    <%= @post.accept_paypal %>
  </p>

  <p>
    <strong>Accept stripe:</strong>
    <%= @post.accept_stripe %>
  </p>

  <%= link_to 'Edit', edit_post_path(@post) %> |
  <%= link_to 'Back', posts_path %>
</section>