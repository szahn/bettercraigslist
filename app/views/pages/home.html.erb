<div class="home_top_band">
	<div class="container">
		<h1>BUY. SELL. SAFER.</h1>
		<h3 id= "catchphrase">A safer, local, marketplace.  Before you decide on what to get, make sure it is legit. </h3>
		<span title="it's dangerous to go alone, sign in"<p><%= link_to "Sign up", new_user_registration_path, class: "btn btn-lg btn-primary" %></p>
	</div>
</div>
<div class="category_band">
	<div class="container">
		<div class="row">
			<% @categories.take(4).each do | category | %>
			<div class="col-md-3">
				<a href="<%= url_for([category]) %>">
				<div class="splash-category">
					<img class="img-responsive" src="<%= category.image.url() %>"/>
					<h2><span><%=category.title%></span></h2>
				</div>
				</a>
			</div>
			<% end %>
		</div>
		<div class="row category_second_row">
			<% @categories.offset(4).take(4).each do | category | %>
			<div class="col-md-3">
				<a href="<%= url_for([category]) %>">
				<div class="splash-category">
					<img class="img-responsive" src="<%= category.image.url() %>"/>
					<h2><span><%=category.title%></span></h2>
				</div>
				</a>
			</div>
				<% end %>
		</div>
	</div>
</div>
<hr>
	<div class="feature_wrapper">
		<div class="featured_title">
			<h1>The most Legit of postings.</h1>
		</div>
	</div>